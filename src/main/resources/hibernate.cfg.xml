<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost/test?serverTimeZone=UTC</property>
        <property name="connection.username">root</property>
        <property name="connection.password">rootroot</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">create-drop</property>

        <mapping class="core.basesyntax.model.figure.Figure"/>
        <mapping class="core.basesyntax.model.figure.Circle"/>
        <mapping class="core.basesyntax.model.figure.Triangle"/>
    </session-factory>
</hibernate-configuration>